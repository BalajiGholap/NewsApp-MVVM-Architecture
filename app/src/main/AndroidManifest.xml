<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".NewsApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/news_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/news_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.NewsAppMVVMArchitecture"
        tools:targetApi="31">
        <activity
            android:name=".LanguagesActivity"
            android:exported="false"
            android:label="@string/title_activity_languages"
            android:theme="@style/Theme.NewsAppMVVMArchitecture" />
        <activity
            android:name=".CountryListMainActivity"
            android:exported="false"
            android:label="@string/title_activity_country_list_main"
            android:theme="@style/Theme.NewsAppMVVMArchitecture" />
        <activity
            android:name=".NewsSourcesActivity"
            android:exported="false"
            android:label="@string/title_activity_news_sources"
            android:theme="@style/Theme.NewsAppMVVMArchitecture" />
        <activity
            android:name=".NewsHeadlinesActivity"
            android:exported="false"
            android:label="@string/title_activity_news_headlines"
            android:theme="@style/Theme.NewsAppMVVMArchitecture" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.NewsAppMVVMArchitecture">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>